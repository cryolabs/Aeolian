{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "declaration": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "paths": {
      "@Evelyn": ["./src/main.ts"],
    }
  },
  "exclude": ["build", "node_modules"]
}
